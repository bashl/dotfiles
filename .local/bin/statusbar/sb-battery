#!/bin/sh

# Prints all batteries, their percentage remaining and an emoji corresponding
# to charge status (üîå for plugged up, üîã for discharging on battery, etc.).

case $BLOCK_BUTTON in
	3) notify-send "Battery module" "- Scroll to change adjust xbacklight." ;;
	4) xbacklight -inc 10 ;;
	5) xbacklight -dec 10 ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

# Loop through all attached batteries and format the info
for battery in /sys/class/power_supply/BAT?*; do
	# If non-first battery, print a space separator.
	[ -n "${capacity+x}" ] && printf " "
	# Sets up the status and capacity
	case "$(cat "$battery/status")" in
		"Full") status="| Ó®ñ " ;;
		"Discharging") status="| Ó§ú " ;;
		"Charging") status="| Ó§ù " ;;
		"Not charging") status="| Ó®ó " ;;
		"Unknown") status="| ‚ôªÔ∏è " ;;
	esac

	bat_status=/sys/class/power_supply/BAT1
	#mostra se esta conectado a um cabo
	cabo=$(cat "$bat_status"/status)
	percentage=$(cat "$bat_status"/capacity)

	if [[ $cabo == Charging ]]; then

		if [[ $percentage -gt 85 ]]; then
			notify-send "Battery charged. " "
			Battery level: ${percentage}%"
			sleep 15m
		fi
			else

		if [[ $percentage -le 15 ]]; then
			notify-send  "Warning: " "
			Low battery.
			Current battery level: ${percentage}%"
			sleep 15m
		fi
	fi
	capacity=$(cat "$battery/capacity")

#	# Will make a warn variable if discharging and low
	[ "$status" = "Ó§ú" ] && [ "$capacity" -le 25 ] && warn="Ó§Ç"
	# Prints the info
	printf "%s%s%d%%" "$status" "$warn" "$capacity"; unset warn
done && exit 0
