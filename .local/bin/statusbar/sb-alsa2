#!/bin/sh

case $BLOCK_BUTTON in
       1) setsid -f "$TERMINAL" -e alsamixer ;; #open alsa mixer in terminal
	2) amixer set Master -q 1+ toggle ;; #mute
	4) amixer set Master -q 5%+ ;; #increase volume in 5% on master sink
	5) amixer set Master -q 5%- ;; # decrease volume in 5% on master sink
	3) notify-send "墳 Volume module" "\- Shows volume 墳, 婢 if muted.
- Middle click to mute.
- Scroll to change." ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

[ $(amixer get Master | tail -2 | grep -c '\[on\]') = 0 ] && echo "| "  && exit

vol="$(amixer get Master | awk -F 'Left:|[][]' 'BEGIN {RS=""}{ print $3 }')"

#vol="$(amixer get Master | grep Mono | awk '{print $4}' | sed 's/[^0-9]*//g')"
#vol=$(amixer get Master | awk '/Mono:/{gsub("\[|\%|\]",""); print $4}')

#if [[ "$vol" -gt "70" ]]; then
	icon=""
#elif [[ "$vol" -gt "30" ]]; then
	icon=""
#else
	icon=""
#fi

echo "| $icon $vol"
